<div class="container d-flex align-items-center justify-content-center mt-5" style="height: 90vh">
    <div class="user_cardr">
        <div class="container">
            <div class="container d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="/picture/SMK (1).png" class="img-fluid" alt="Logo">
                </div>
            </div>
            <div class="container d-flex justify-content-center form_container">
                <form>
                    <div action="/auth/register" method="POST" autocomplete="off">
                        <div class="d-flex justify-content-center my-2">
                            <h2>
                                <%= title %>
                            </h2>
                        </div>
                        <form class="card-text trtxt">
                            <div class="container">
                                <div class="input-group mb-2">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><img src="picture/USER__x2F__ADD_1_.png"
                                                class="iclg img-fluid" alt="Icon">
                                        </span>
                                    </div>
                                    <input type="text" id="name" name="name" class="form-control input_pass" placeholder="Masukan Nama" value="<%= typeof name != 'undefined' ? name : '' %>" />
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="input-group mb-2">
                                            <div class="input-group-append">
                                                <span class="input-group-text"> <img src="picture/GRID_1_1_.png"
                                                        class="iclg img-fluid" alt="Icon">
                                                </span>
                                            </div>
                                            <select name="jeniskelamin" id="jeniskelamin" class="custom-select regdrop">
                                                <option disabled selected>Jenis Kelamin</option>
                                                <option value="Laki-laki">Laki-laki</option>
                                                <option value="Perempuan">Perempuan</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="input-group mb-2">
                                            <div class="input-group-append">
                                                <span class="input-group-text"> <img src="picture/MAP_1_.png"
                                                        class="iclg img-fluid" alt="Icon">
                                                </span>
                                            </div>
                                            <select name="kelas" class="custom-select regdrop">
                                                <option disabled selected>Kelas</option>
                                                <option value="10">X</option>
                                                <option value="11">XI</option>
                                                <option value="12">XII</option>
                                                <option value="13">XIII</option>
                                            </select>
                                            <select name="jurusan" class="custom-select regdrop" value="">
                                                <option disabled selected>Jurusan</option>
                                                <option value="TKJIJ">TKJIJ</option>
                                                <option value="TKBB">TKBB</option>
                                                <option value="TME">TME</option>
                                                <option value="TITL">TITL</option>
                                                <option value="TEDK">TEDK</option>
                                                <option value="TMPO">TMPO</option>
                                                <option value="TFM">TFM</option>
                                                <option value="SIJA">SIJA</option>
                                            </select>
                                            <select name="index" class="custom-select regdrop" value="">
                                                <option disabled selected>Indeks</option>
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="input-group mb-2">
                                    <div class="input-group-append">
                                        <span class="input-group-text"> <img src="picture/NOTEPAD_1_.png"
                                                class="iclg img-fluid" alt="Icon">
                                        </span>
                                    </div>
                                    <input type="text" name="absen" class="form-control input_user" value="<%= typeof absen != 'undefined' ? absen : '' %>" placeholder="No. Absen  " required>
                                </div>
                                <div class="input-group mb-2">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><img src="picture/USER__x2F__ADD_1_.png"
                                                class="iclg img-fluid" alt="Icon"></span>
                                    </div>
                                    <input type="text" name="username" class="form-control input_pass" value="<%= typeof username != 'undefined' ? username : '' %>" placeholder="Username" required>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <div class="input-group-append">
                                                <span class="input-group-text"> <img src="picture/UNLOCK_1_.png"
                                                        class="iclg img-fluid" alt="Icon">
                                                </span>
                                            </div>
                                            <input type="password" name="password" class="form-control input_user" value="<%= typeof password != 'undefined' ? password : '' %>" placeholder="Password" required>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group mb-3">
                                            <div class="input-group-append">
                                                <span class="input-group-text"> <img src="picture/UNLOCK_1_.png"
                                                        class="iclg img-fluid" alt="Icon">
                                                </span>
                                            </div>
                                            <input type="password" name="password2" class="form-control input_user" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" placeholder="Konfirmasi" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center my-0 login_container">
                                    <button type="submit" class="btn login_btn">Register</button>
                                </div>
                            </div>

                            <div class="mb-3 mt-1">
                                <div class="d-flex justify-content-center links">
                                    Sudah terdaftar? Silahkan <a href="/" class="gtxt ml-1">Masuk</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>