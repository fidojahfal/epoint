<div class="container-fluid my-2">
    <div class="row">
        <div class="col-lg-2 col-md-12 my-5">
            <div class="row">
                <div class="col-12">
                    <div class="rounded-circle d-flex col-12 container-fluid justify-content-center
                        align-items-center mt-1">
                        <img src="default.jpg" alt="Foto Siswa" class="rounded-circle mt-4 user_icon_container">
                    </div>
                    <div class="col-12">
                        <h4 class="d-flex justify-content-center mt-3 wtxt">
                            <%= admin_name.nama %>
                        </h4>
                    </div>
                    <div class="col-12">
                        <h5 class="d-flex text-center justify-content-center wtxt"><b>Admin</b></h5>
                    </div>
                </div>
                <div class="col-12 mt-5">
                    <div class="row">
                        <div class="col-lg-12 col-6 my-3 pl-0 d-flex justify-content-start
                        align-items-center flex-row">
                            <a role="button" href="#" class="brdrm py-3 px-4 ml-0 d-flex
                        align-items-center"> <img src="/picture/dashboard.png" alt="dashicon" class="mnicon mx-2">Dashboard</a>
                        </div>
                        <div class="col-lg-12 col-6 my-3 pl-0 d-flex justify-content-center
                        align-items-center flex-row">
                            <a role="button" href="#"> <img src="/picture/2.png" alt="rulesicon" class="mnicon"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-10 px-2 col-md-12">
            <div class="backw container-fluid justify-content-center
                        align-items-center py-1">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-center
                        align-items-center mt-3">
                            <img src="/picture/logo poin admin.svg" alt="ilustrasi" class="img-fluid">
                        </div>
                    </div>
                    <div class="container-fluid mx-0 px-2">
                        <div class="row mt-3">
                            <div class="col-1 px-0 mt-4 d-flex align-items-center">
                                <h5>Dashboard</h5>
                            </div>
                            <div class="col-11 px-0 mt-4 d-flex flex-row-reverse align-items-center">
                                <div class="dropdown">
                                    <div data-toggle="dropdown" class="menu_icon_container d-flex justify-content-center align-items-center ml-2" role="button">
                                        <img src="/picture/3dots.svg" alt="Foto Siswa" class="rounded-circle iconm">
                                    </div>
                                    <div class="dropdown-menu boxdrop dropdown-menu-right p-0">
                                        <div class="card" style="width: 18rem;">
                                            <div class="card-body">
                                                <h5 class="card-title m-0">
                                                    <%= admin_name.nama %>
                                                </h5>
                                                <p class="card-text">Admin</p>
                                            </div>
                                            <a class="dropdown-item dropout text-center" href="/logout">Logout</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown">
                                    <div data-toggle="dropdown">
                                        <div class="menu_icon_container d-flex justify-content-center align-items-center mr-2" role="button">
                                            <img src="/picture/bell.svg" alt="Foto Siswa" class="rounded-circle iconm">
                                            <div class="dropdown-menu boxdrop dropdown-menu-right p-0">
                                                <div class="card" style="width: 18rem;">
                                                    <div class="card-body">
                                                        <h5 class="card-title m-0">NOTIFICATION</h5>
                                                        <p class="card-text">No Notification</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card_dash container-fluid my-2 shadow">
                        <div class="container">
                            <div class="row">
                                <div class="col-12 col-md-6 py-3 d-flex align-items-center">
                                    <img src="/picture/banner1.png" alt="ilustrasi" class="img-fluid float-left">
                                </div>
                                <div class="col-12 col-md-6">
                                    <img src="/picture/banner2.png" alt="ilustrasi" class="img-fluid float-right">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-group d-flex align-items-center mt-3 mb-2">
                            <div class="col-lg-2 col-12 px-2">
                                <h5 class="mb-0">Tabel Nama</h5>
                            </div>
                            <div class="col-md-10 px-2">
                                <select id="kelas" type="search" class="mr-3 custom-select  dropdownclr my-1">
                                    <option value="-" selected>Kelas</option>
                                    <option value="10">X</option>
                                    <option value="11">XI</option>
                                    <option value="12">XII</option>
                                    <option value="13">XIII</option>
                                </select>
                                <select disabled id="jurusan" type="search" class="mr-3 custom-select dropdownclr my-1">
                                    <option value="-" selected>Jurusan</option>
                                    <option value="TKJIJ">TKJIJ</option>
                                    <option value="TKBB">TKBB</option>
                                    <option value="TME">TME</option>
                                    <option value="TITL">TITL</option>
                                    <option value="TEDK">TEDK</option>
                                    <option value="TMPO">TMPO</option>
                                    <option value="TFM">TFM</option>
                                    <option value="SIJA">SIJA</option>
                                </select>
                                <select disabled id="index" type="search" class="mr-3 custom-select dropdownclr my-1">
                                    <option value="-" selected>Indeks</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                </select>
                                <button disabled id="btnfltr" type="submit" class="btncr">Cari</button>
                            </div>
                        </div>
                    </div>
                    <div class="card_dash container-fluid justify-content-center
                        align-items-center mb-2">
                        <div class="col-12 py-1">
                            <div class="container mt-3">
                                <table id="tably" class="display" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% records.forEach((admin)=>{%>
                                            <tr>
                                                <td class="text-center">
                                                    <%= admin.absen %>
                                                </td>
                                                <td class="text-center">
                                                    <%= admin.name %>
                                                </td>
                                                <td class="text-center">
                                                    <%= admin.kelas %>
                                                        <%= admin.jurusan %>
                                                            <%= admin.index %>
                                                </td>
                                                <td class="text-center">
                                                    <%= admin.poin %>
                                                </td>
                                                <td class="text-center"><button type="button" class="btnedit" data-toggle="modal" title="<%= admin.id %>" title2="<%= admin.poin %>" data-target="#exampleModal">Add
                                                    Point</button>
                                                    <% }); %>
                                                        <!-- Pop Up Point -->
                                                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog modal-dialog-centered">
                                                                <div class="modal-content poppoint">
                                                                    <div class="modal-body px-0 pt-4 pb-3">
                                                                        <div class="container-fluid p-0">
                                                                            <h4 class="wtxt mt-2">POIN SISWA SEKARANG</h4>
                                                                            <h1 id="poin" class="ytxt font-weight-bold">
                                                                            </h1>
                                                                            <form class="mt-1" action="/auth/updatePoin" method="POST" autocomplete="off">
                                                                                <div class="container px-5 py-2">
                                                                                    <div class="form-group row mb-2 ml-1">
                                                                                        <label for="inputEmail3" class="col-md-4 col-12 col-form-label wtxt d-flex
                                                                                flex-row">
                                                                                    <h5>Poin</h5>
                                                                                </label>
                                                                                        <div class="col-md-7 col-12 pl-0">
                                                                                            <input type="text" name="poin2" class="form-control inpop" placeholder="Poin tambah atau kurang" value="" required>
                                                                                        </div>
                                                                                    </div>
                                                                                    <div class="form-group row ml-1 mb-2">
                                                                                        <label for="inputEmail3" class="col-md-4 col-12 col-form-label wtxt d-flex
                                                                                flex-row">
                                                                                    <h5>Keterangan</h5>
                                                                                </label>
                                                                                        <div class="col-md-7 col-12 pl-0">
                                                                                            <input type="text" name="keterangan" class="form-control inpop" placeholder="Keterangan perbuatan" value="" required>
                                                                                            <input type="hidden" name="id" class="hidden" value="">
                                                                                            <input type="hidden" name="poin" class="poin-hidden" value="">
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="form-group row my-1">
                                                                                    <div class="col-12">
                                                                                        <button type="submit" class="btnpop">Terapkan</button>
                                                                                    </div>
                                                                                </div>
                                                                            </form>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!-- Pop Up Point -->
                                                </td>
                                            </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>